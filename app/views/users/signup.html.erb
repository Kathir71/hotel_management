<%= render 'shared/errors', obj: @user %>
<div class="login_form">
    <h1>User Signup</h1>
    <%= form_with scope: :users , url:user_signup_path , local: true ,method: :post , data: { turbo: false } do |f| %>
    <div class="input_container">
        <div class="row">
            <%= f.label :name%>
            <%= f.text_field :name , placeholder: "Name" , required:true%>
        </div>
        <div class="row">
            <%= f.label :email%>
            <%= f.email_field :email , placeholder: "Email" , required:true%>
        </div>
        <div class="row">
            <%= f.label :password%>
            <%= f.password_field :password , placeholder: "Password" , required:true%>
        </div>
        <div class="row">
            <%= f.file_field :avatar , required:true , accept:"image/png, image/jpeg"%>
        </div>
        <%= f.submit "Sign up" , :class => 'login_btn'%>
    </div>
    <%end%>
</div>