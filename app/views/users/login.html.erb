<%# <%= render 'shared/errors' , obj: @user %> 

<div class = "login_form">
   <h1>User Login</h1>
    <%= form_with scope: :users , url:'/user/login' , local: true ,method: :post , data: { turbo: false } do |f| %>
    <div class="input_container">
        <div class="row">
            <%= f.label :email%>
            <%= f.email_field :email, placeholder:"Email" , required:true%>
        </div>
        <div class="row">
            <%= f.label :password%>
            <%= f.password_field :password ,placeholder: "Password" , required:true%>
        </div>
        <%= f.submit "Login" , :class => 'login_btn'%>
    </div>
    <%end%>
</div>