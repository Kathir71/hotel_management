
<div class="navBar">
<h1 class = "logo">
  <%= link_to "App" , root_path%>
  </h1>
  <input type="checkbox" id="nav-toggle" class="nav-toggle">
  <nav>
    <ul>
      <% if !user_logged_in? && !manager_logged_in? %>
      <li><%= link_to "Sign Up" , signUp_path %></li>
      <li><%= link_to "Login" , login_path%></li>
      <%end%>   
      <% if manager_logged_in? && manager_has_hotel?%>
      <li><%= link_to "Hotel Details" , hotelManager_dashboard_path %></li>
      <li><%= button_to "Log Out" , hotelManager_logout_path , data:{ turbo_method: :delete} ,method: :delete %> </li>
      <%elsif manager_logged_in?%>
      <li><%= link_to "Register your Hotel" , hotel_create_path%></li>
      <%end%>
      <% if user_logged_in?%>
      <li><%= link_to "Your bookings" , user_dashboard_path %></li>
      <li><%= button_to "Log Out" , user_logout_path , data:{turbo_method: :delete} , method: :delete%></li>
      <%end%>
    </ul>
  </nav>
  <label for="nav-toggle" class="nav-toggle-label">
    <span></span>
  </label>
</div>


