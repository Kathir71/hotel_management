        <div>
            <%= f.label "Check in"%>
                <%= f.date_field :checkInDate , placeholder: "Check in date"%>
        </div>
        <div>
            <%= f.label "Check out"%>
                <%= f.date_field :checkOutDate , placeholder: "Check out date"%>
        </div>
        </div>
    </div>
    <div class="search_btn_container"><%= f.submit "Search" , :class => "home_search_button"%></div>
</div>
